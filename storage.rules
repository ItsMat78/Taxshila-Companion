rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload profile pictures only to their own folder.
    // The folder name must match the user's UID.
    match /profilePictures/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
