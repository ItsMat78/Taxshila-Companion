
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPERS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.get('admin', false) == true || 
        request.auth.token.email == 'guest-admin@taxshila-auth.com'
      );
    }

    function isReviewer() {
      return request.auth.token.email == 'guest-admin@taxshila-auth.com';
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- COLLECTION-SPECIFIC RULES ---

    match /adminNotes/{noteId} {
      allow list, read: if isAdmin();
      allow write: if isAdmin() && !isReviewer();
    }

    match /students/{studentDocId} {
      allow list: if true;
      allow read: if isAdmin();
      allow create: if true;
      allow update: if (isAdmin() && !isReviewer()) || isOwner(resource.data.uid);
      allow delete: if isAdmin() && !isReviewer();
    }

    match /attendanceRecords/{recordId} {
      allow list, read: if isAdmin() || (isSignedIn() && resource.data.studentId == request.auth.token.studentId);
      allow create, update: if isSignedIn();
      allow delete: if isAdmin() && !isReviewer();
    }

    match /feedbackItems/{feedbackId} {
      allow list, read: if isAdmin() || (isSignedIn() && resource.data.studentId == request.auth.token.studentId);
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() && !isReviewer();
    }

    match /alertItems/{alertId} {
      allow list, read: if isAdmin() || (isSignedIn() && (resource.data.studentId == request.auth.token.studentId || resource.data.studentId == null));
      allow create, update, delete: if isAdmin() && !isReviewer();
    }

    match /appConfiguration/{configId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() && !isReviewer();
    }
    
    match /admins/{adminId} {
      allow list, read: if isAdmin();
      allow write: if false;
    }
  }
}
